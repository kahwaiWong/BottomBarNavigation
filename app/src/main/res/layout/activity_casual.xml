<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outfit.CasualActivity">

    <TextView
        android:id="@+id/textViewOutfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/casual"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintBottom_toTopOf="@+id/ScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="387dp"
        android:layout_height="655dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewCasual1"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_casual6" />

            <ImageView
                android:id="@+id/imageViewCasual2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCasual1"
                app:srcCompat="@drawable/image_casual5" />

            <ImageView
                android:id="@+id/imageViewCasual3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCasual2"
                app:srcCompat="@drawable/image_casual3" />

            <ImageView
                android:id="@+id/imageViewCasual4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCasual3"
                app:srcCompat="@drawable/image_casual4" />

            <ImageView
                android:id="@+id/imageViewCasual5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCasual4"
                app:srcCompat="@drawable/image_casual2" />


            <TextView
                android:id="@+id/textViewCasual1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCasual1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCasual1"
                app:layout_constraintTop_toTopOf="@+id/imageViewCasual1" />

            <TextView
                android:id="@+id/textViewCasual2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualShortDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCasual2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCasual2"
                app:layout_constraintTop_toTopOf="@+id/imageViewCasual2" />

            <TextView
                android:id="@+id/textViewCasual3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualShortDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCasual3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCasual3"
                app:layout_constraintTop_toTopOf="@+id/imageViewCasual3" />

            <TextView
                android:id="@+id/textViewCasual4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualShortDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCasual4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCasual4"
                app:layout_constraintTop_toTopOf="@+id/imageViewCasual4" />

            <TextView
                android:id="@+id/textViewCasual5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewCasual5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewCasual5"
                app:layout_constraintTop_toTopOf="@+id/imageViewCasual5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>