<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Outfit.DinnerActivity">

    <TextView
        android:id="@+id/textViewDinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dinner"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:fontFamily="sans-serif-smallcaps"
        app:layout_constraintBottom_toTopOf="@+id/ScrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="387dp"
        android:layout_height="655dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewDinner1"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/image_dinner6" />

            <ImageView
                android:id="@+id/imageViewDinner2"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDinner1"
                app:srcCompat="@drawable/image_dinner5" />

            <ImageView
                android:id="@+id/imageViewDinner3"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDinner2"
                app:srcCompat="@drawable/image_dinner3" />

            <ImageView
                android:id="@+id/imageViewDinner4"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDinner3"
                app:srcCompat="@drawable/image_dinner4" />

            <ImageView
                android:id="@+id/imageViewDinner5"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/casual"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDinner4"
                app:srcCompat="@drawable/image_dinner2" />

            <TextView
                android:id="@+id/textViewDinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDinner1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewDinner1"
                app:layout_constraintTop_toTopOf="@+id/imageViewDinner1" />

            <TextView
                android:id="@+id/textViewDinner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDinner2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewDinner2"
                app:layout_constraintTop_toTopOf="@+id/imageViewDinner2" />

            <TextView
                android:id="@+id/textViewDinner3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualShortDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDinner3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewDinner3"
                app:layout_constraintTop_toTopOf="@+id/imageViewDinner3" />

            <TextView
                android:id="@+id/textViewDinner4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDinner4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewDinner4"
                app:layout_constraintTop_toTopOf="@+id/imageViewDinner4" />

            <TextView
                android:id="@+id/textViewDinner5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/casualLongDesc"
                android:textSize="18sp"
                app:fontFamily="sans-serif-smallcaps"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDinner5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageViewDinner5"
                app:layout_constraintTop_toTopOf="@+id/imageViewDinner5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>