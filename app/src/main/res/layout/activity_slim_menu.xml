<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Slim.SlimMenu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <ImageButton
                android:id="@+id/imageButton_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/task" />

            <TextView
                android:id="@+id/txtDailyTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/daily_task"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <ImageView
                android:id="@+id/imageViewExecise"
                android:layout_width="361dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/exercise"
                app:srcCompat="@drawable/exercise" />

            <TextView
                android:id="@+id/txtActivityExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/exercise"
                android:textSize="25sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <ImageView
                android:id="@+id/imageViewDiet"
                android:layout_width="348dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/diet"
                app:srcCompat="@drawable/diet" />

            <TextView
                android:id="@+id/txtActivityDiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="1dp"
                android:text="@string/diet"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>